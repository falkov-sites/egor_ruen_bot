---
// src/layouts/BaseLayout.astro
import '../styles/global.css'

interface Props {
  title: string
}

const { title = 'Переведи на английский' } = Astro.props
---

<!doctype html>
<html lang='ru'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' href='./favicon.ico' type='image/x-icon' />
    <link rel='shortcut icon' href='./favicon.ico' type='image/x-icon' />
    <title>{title}</title>
  </head>
  <body
    class='flex min-h-screen flex-col items-center bg-gray-100 p-4 text-gray-900 transition-colors duration-300 dark:bg-gray-900 dark:text-gray-100'
  >
    <slot />
  </body>
</html>
